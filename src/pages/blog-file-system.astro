---
import type { ACTION_ERROR_CODES, ACTION_QUERY_PARAMS, ActionError, ActionInputError } from "astro:actions";
import BlogPost from "../components/BlogPost.astro";
import { siteConfig } from "../config/site-congif";
import MainLayout from "../layouts/MainLayout.astro";

const matches = import.meta.glob("./posts-old/*.{md,mdx}", { eager: true });
const posts = Object.values(matches) as any[];



const title = "MEM's Blog";
---


<MainLayout title={title}>
	<!-- component -->
<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">{siteConfig.title}</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">

            {
                posts.map((post)=><BlogPost {...post}/>)
            }

            <!-- <BlogPost /> -->

        </div>
    </div>
</section>
</MainLayout>

